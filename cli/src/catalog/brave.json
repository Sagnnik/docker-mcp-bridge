{
  "name": "brave",
  "title": "Brave Search",
  "description": "Search the Web for pages, images, news, videos, and more using the Brave Search API.",
  "tools": [
    "brave_image_search",
    "brave_local_search",
    "brave_news_search",
    "brave_summarizer",
    "brave_video_search",
    "brave_web_search"
  ],
  "env": [
    {
      "name": "BRAVE_MCP_TRANSPORT",
      "value": "stdio"
    }
  ],
  "secrets": [
    {
      "name": "brave.api_key",
      "env": "BRAVE_API_KEY",
      "example": "YOUR_API_KEY_HERE",
      "description": "See [Getting an API key](https://github.com/brave/brave-search-mcp-server?tab=readme-ov-file#getting-an-api-key)"
    }
  ],
  "config": []
}