{
  "name": "aws-appsync",
  "title": "AWS AppSync",
  "description": "Manage applications powered by AWS AppSync.",
  "tools": [
    "create_api",
    "create_api_cache",
    "create_api_key",
    "create_channel_namespace",
    "create_datasource",
    "create_domain_name",
    "create_function",
    "create_graphql_api",
    "create_resolver",
    "create_schema"
  ],
  "env": [
    {
      "name": "AWS_REGION",
      "value": "{{aws-appsync.aws_region}}"
    },
    {
      "name": "AWS_PROFILE",
      "value": "{{aws-appsync.aws_profile}}"
    },
    {
      "name": "AWS_ACCESS_KEY_ID",
      "value": "{{aws-appsync.aws_access_key_id}}"
    }
  ],
  "secrets": [
    {
      "name": "aws-appsync.aws_secret_access_key",
      "env": "AWS_SECRET_ACCESS_KEY",
      "example": "your-aws-secret-access-key"
    },
    {
      "name": "aws-appsync.aws_session_token",
      "env": "AWS_SESSION_TOKEN",
      "example": "your-aws-session-token"
    }
  ],
  "config": [
    {
      "name": "aws-appsync",
      "description": "Configure AWS credentials for AppSync access",
      "type": "object",
      "properties": {
        "aws_region": {
          "type": "string"
        },
        "aws_profile": {
          "type": "string"
        },
        "aws_access_key_id": {
          "type": "string"
        }
      }
    }
  ]
}